<!DOCTYPE html>
<html>
<head>
  <title><%= page_meta.title %></title>
   <meta name='keywords' content='<%= page_meta.keywords %>' />
   <meta name='description' content='<%= page_meta.description %>' />
   <meta property="og:title" content='<%= page_meta.og_title %>' />
   <meta property="og:description" content='<%= page_meta.og_description %>' />
   <meta property="og:image" content='<%= page_meta.og_image_url %>' />
   <%= favicon_link_tag %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="//vk.com/js/api/openapi.js?116"></script>
  <script type="text/javascript">
    VK.init({apiId:<%= Settings['vk.app_id'] %> , onlyWidgets: true});
  </script>
</head>
<body>

<%= yield %>

</body>
</html>
