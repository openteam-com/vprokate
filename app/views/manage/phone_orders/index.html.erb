<div class="row">
  <div class="col-lg-12">
    <table class="table table-bordered table-hover table-condensed">
      <thead>
        <th>ФИО</th>
        <th>Телефон</th>
        <th>Дата заказа</th>
        <th>Тип заказа</th>
      </thead>
      <tbody>
        <% @phone_orders.each do |order| %>
          <tr>
            <td><%= order.fullname %></td>
            <td><%= order.phone %></td>
            <td><%= time_ago_in_words(order.created_at) %> назад</td>
            <td><%= t %Q(enumerize.vehicle.#{order.vehicle}) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @phone_orders %>
  </div>
</div>
